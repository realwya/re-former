<%= form_with model: @user do |form| %>
  <%= form.label :username, "Username:" %>
  <%= form.text_field :username, placeholder: "Enter your username here" %>
  <%= form.label :email, "E-mail:" %>
  <%= form.email_field :email %>
  <%= form.label :password, "Password:" %>
  <%= form.password_field :password, placeholder: "Enter a strong one!" %>
  <%= form.submit %>
<% end %>